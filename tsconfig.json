{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // ✅ Allow emitting JS
    "outDir": "dist", // ✅ Output directory
    "esModuleInterop": true,
    "module": "commonjs", // ✅ Use commonjs for Node.js (or esnext if bundler)
    "moduleResolution": "node", // ✅ Node resolution for backend
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // ✅ or preserve if using React
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
